<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Production Plan Tree View -->
    <record id="view_production_plan_tree" model="ir.ui.view">
        <field name="name">production.plan.tree</field>
        <field name="model">manufacturing.production.plan</field>
        <field name="arch" type="xml">
            <tree string="Production Plans" decoration-info="state=='draft'"
                  decoration-warning="state=='confirmed'" decoration-success="state=='done'">
                <field name="sequence"/>
                <field name="name"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="date_planned"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="efficiency"/>
            </tree>
        </field>
    </record>

    <!-- Production Plan Form View -->
    <record id="view_production_plan_form" model="ir.ui.view">
        <field name="name">production.plan.form</field>
        <field name="model">manufacturing.production.plan</field>
        <field name="arch" type="xml">
            <form string="Production Plan">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                             class="btn-primary"/>
                    <button name="action_schedule" type="object" string="Schedule"
                             class="btn-primary"/>
                    <button name="action_start_production" type="object" string="Start Production"
                             class="btn-primary"/>
                    <button name="action_complete" type="object" string="Complete"
                             class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Production Plan Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                            <field name="bom_id"/>
                            <field name="work_center_id"/>
                        </group>
                        <group>
                            <field name="date_planned"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="priority"/>
                            <field name="scheduling_method"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Resource Requirements"/>
                        <page string="Milestones"/>
                        <page string="Quality Checks"/>
                        <page string="Dependencies"/>
                        <page string="Analytics">
                            <group>
                                <group>
                                    <field name="machine_utilization"/>
                                    <field name="labor_utilization"/>
                                    <field name="material_waste_percentage"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Production Plan Search View -->
    <record id="view_production_plan_search" model="ir.ui.view">
        <field name="name">production.plan.search</field>
        <field name="model">manufacturing.production.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
                <field name="work_center_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="high_priority" string="High Priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <group expand="0" string="Group By">
                    <filter name="group_product" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_work_center" string="Work Center" context="{'group_by': 'work_center_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Production Plan Action -->
    <record id="action_production_plan" model="ir.actions.act_window">
        <field name="name">Production Plans</field>
        <field name="res_model">manufacturing.production.plan</field>
        <field name="view_mode">tree,form,kanban,graph,pivot</field>
        <field name="search_view_id" ref="view_production_plan_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first production plan!
            </p>
            <p>
                Production plans help you organize and schedule your manufacturing operations.
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_manufacturing_root" name="Manufacturing" sequence="10"/>
    <menuitem id="menu_production_management" name="Production Management"
              parent="menu_manufacturing_root" sequence="10"/>
    <menuitem id="menu_production_plan" name="Production Plans"
              parent="menu_production_management" action="action_production_plan"
              sequence="10"/>
</odoo>
